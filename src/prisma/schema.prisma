datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  wallet    Wallet?  // Relation to Wallet model
}

model Wallet {
  id      String   @id @default(uuid())
  balance Float    @default(0)
  user    User     @relation(fields: [userId], references: [id])
  userId  String   @unique
}
