datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  wallet    Wallet? @relation
  walletId  Int?    @unique
}

model Wallet {
  id      Int     @id @default(autoincrement())
  balance Float   @default(0)
  user    User    @relation(fields: [userId], references: [id])
  userId  Int     @unique
}